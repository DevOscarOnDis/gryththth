<html>

<head>
    <meta name="description" content="rova store for shoping">
    <meta name="keywords" content="HTML, CSS, JavaScript">
    <meta name="author" content="John Doe">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        Shops
    </title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <div class="main">
        <%- include("partial/head.ejs") %>
            <div class="content">
                <div class="top-navbar">
                    <div class="bx bx-menu ghost" id="menu-icon"></div>
                    <img src="https://cdn.discordapp.com/attachments/982364884614389800/1116783390537039882/download_1.webp" alt=""
          width="50" height="30" style="border-radius: 30%; box-shadow: 0 0px 00px 0 #01a6dd"
                        class="d-inline-block align-text-top position-absolute top-50 start-50 translate-middle">
                    <% if(user) { %>
                        <div class="profile">
                            <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png"
                                class="user-photo">
                        </div>
                        <% }else{ %>
                            <div class="profile">
                                <button onclick="window.location.href='/login'" class="btn">Login</button>
                            </div>
                            <%}%>
                </div>

                <div class="productAddForm">
                    <h1>Add Product</h1>
                    <form action="" method="post">
                        <div class="holder">
                            <label for="p_name">اسم المنتج</label>
                            <input type="text" name="pname" id="" class="input-style" placeholder="Product Name..." required>
                        </div>                        
                        <div class="holder">
                            <label for="p_img">رابط صورة المنتج </label>
                            <input type="text" name="pimg" id="" class="input-style" placeholder="Product Url Image..." required>
                        </div>
                        <div class="holder">
                            <label for="p_email">المنتج </label>
                            <input type="text" name="pemail" id="" class="input-style" placeholder="Product Email..." required>
                        </div>
                        <div class="holder">
                            <label for="p_price">سعر المنتج</label>
                            <input type="number" name="pprice" id="" class="input-style" placeholder="Product Price..." required>
                        </div>                        
                        <div class="holder">
                            <label for="p_desc">وصف المنتج</label>
                            <textarea name="pdesc" id="" cols="30" rows="10" placeholder="Product Description..." class="testare" required ></textarea>
                        </div>
                        <button type="submit">اضف المنتج</button>                    
                    </form>
                </div>

            </div>
    </div>
    <%- include("partials/footer") %>
        <style>
        </style>
</body>

</html>